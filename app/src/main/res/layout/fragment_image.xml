<?xml version="1.0" encoding="utf-8"?>
<com.example.caruselslider.CarouselLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageFragment"
    android:orientation="vertical"
    android:id="@+id/root_container"
    android:gravity="center"
    android:background="@android:color/transparent">

    <ImageView
        android:src="@drawable/ic_launcher_background"
        android:id="@+id/pagerImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:contentDescription="@string/app_name"
        />


    <TextView
        android:layout_below="@+id/pagerImg"
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold" />
</com.example.caruselslider.CarouselLinearLayout>